<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="110dp"
    android:background="#919191">

    <TextView
        android:id="@+id/textTicket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="GAZP" />

    <TextView
        android:id="@+id/texTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Газпром"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textTicket"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textTicket"
        app:layout_constraintTop_toBottomOf="@+id/textTicket" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/texTitle"
        app:layout_constraintTop_toBottomOf="@+id/texTitle"
        tools:text="223.7" />

    <TextView
        android:id="@+id/texPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textPrice"
        app:layout_constraintTop_toBottomOf="@+id/textPrice"
        tools:text="-1.4%" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageIndicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/texPercent"
        app:layout_constraintEnd_toStartOf="@+id/texPercent"
        app:layout_constraintTop_toBottomOf="@+id/textPrice"
        app:srcCompat="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/textTurnover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textPrice"
        tools:text="V: 16.4 млрд" />

</androidx.constraintlayout.widget.ConstraintLayout>