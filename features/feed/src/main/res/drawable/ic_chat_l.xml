<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:gravity="start|bottom"
        android:top="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="180%"
            android:pivotY="120%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#fff" />
                <size
                    android:width="10dp"
                    android:height="10dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="10dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <corners android:radius="16dp" />
            <solid android:color="#fff" />
            <size
                android:height="24dp" />
        </shape>
    </item>

</layer-list>